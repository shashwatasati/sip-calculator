# Database Configuration
# Get this from Vercel Postgres or Neon (free tier)
DATABASE_URL=postgresql://username:password@host:5432/database

# PostgreSQL Connection Details (auto-set by Vercel if using Vercel Postgres)
PGHOST=your-postgres-host.neon.tech
PGPORT=5432
PGUSER=your-username
PGPASSWORD=your-password
PGDATABASE=your-database-name

# Session Secret (generate a random string)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-random-secret-key-here-change-this

# Server Configuration
PORT=5000
NODE_ENV=production
